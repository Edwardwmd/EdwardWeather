<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IndicatorView">
        <attr name="marker" format="reference" />
        <attr name="indicatorValue" format="integer" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="intervalSize" format="dimension" />
        <attr name="indicatorStrings" format="integer" />
        <attr name="indicatorColors" format="integer" />
    </declare-styleable>

    <declare-styleable name="WeatherTextView">
        <attr name="weatherViewText" format="string|reference" />
        <attr name="weatherViewTextSize" format="dimension" />
        <attr name="weatherViewTextColor" format="color|reference" />
        <attr name="weatherViewBackground" format="color|reference" />
        <attr name="weatherViewLineColor" format="color|reference" />
    </declare-styleable>

    <!--关于SunriseSunsetView相关参数-->
    <declare-styleable name="SunriseSunsetView">
        <!-- Track color -->
        <attr name="ssv_track_color" format="color|reference" />
        <!-- Track width -->
        <attr name="ssv_track_width" format="dimension" />

        <!-- Sun radius -->
        <attr name="ssv_sun_radius" format="dimension" />
        <!-- Sun color -->
        <attr name="ssv_sun_color" format="color|reference" />

        <!-- Shadow color -->
        <attr name="ssv_shadow_color" format="color|reference" />

        <!-- Label text size -->
        <attr name="ssv_label_text_size" format="dimension" />
        <!-- Label text color -->
        <attr name="ssv_label_text_color" format="color|reference" />
        <!-- Label vertical offset -->
        <attr name="ssv_label_vertical_offset" format="dimension" />
        <!-- Label horizontal gap -->
        <attr name="ssv_label_horizontal_offset" format="dimension" />
    </declare-styleable>
</resources>
